{
	"compilerOptions": {
		"target": "es5",
		"module": "amd",
		"lib": [ "dom", "es2017" ],

		"sourceMap": false,
		"removeComments": false,
		"alwaysStrict": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"pretty": true,
		"baseUrl": "Sources/TypeScript",

		"typeRoots": [
			"node_modules/@types",
			"Sources/types"
		]
	}
}
